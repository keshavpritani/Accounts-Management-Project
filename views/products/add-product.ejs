                        <div class="form-group col-md-6">
                          <label>Price</label>
                          <input
                            type="number"
                            class="form-control input-rounded"
                            min="0"
                            required
                            name="price" step="0.01"
                            <% if (locals.product) { %>
                            value="<%= product.price %>"
                            <% } %>
                          />
                        </div>
                      </div>
                      <input  type="submit" class="btn btn-primary">
                    </form>
                  </div>
                </div>
              </div>
          </div>
        </div>
