          <!-- row -->
          <div class="row">
            <div class="col-xl-6 col-xxl-12">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title"><% if (locals.product) { %> Edit <% } else { %> Add <% } %> Product</h4>
                </div>
                <div class="card-body">
                  <div class="basic-form">
                    <form method="POST" action="/products/add">
                      <div class="form-row">
                        <div class="form-group col-md-6">
                          <label>Product Name</label>
                          <% if (locals.product) { %>
                          <input type="hidden" class="form-control" name="_id" value="<%= product._id %>" />
                          <input type="hidden" class="form-control" name="status" value="<%= product.status %>" />
                            <% } %>
                          <input
                            type="text"
                            class="form-control input-rounded"
                            autofocus
                            name="name"
                            required
                            <% if (locals.product) { %>
                            value="<%= product.name %>"
                            <% } %>
                          />
                        </div>
                      <!-- </div>
                      <div class="form-row"> -->
                        <!-- <div class="form-group col-md-6">
